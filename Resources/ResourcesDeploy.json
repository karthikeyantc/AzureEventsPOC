            "properties": {
                "value": "<!--\r\n    - Policies are applied in the order they appear.\r\n    - Position <base/> inside a section to inherit policies from the outer scope.\r\n    - Comments within policies are not preserved.\r\n-->\r\n<!-- Add policies as children to the <inbound>, <outbound>, <backend>, and <on-error> elements -->\r\n<policies>\r\n  <!-- Throttle, authorize, validate, cache, or transform the requests -->\r\n  <inbound>\r\n    <base />\r\n    <set-backend-service base-url=\"https://func-azureevent-dev.azurewebsites.net/api\" />\r\n    <set-variable name=\"requestBody\" value=\"@(context.Request.Body.As&lt;JObject&gt;())\" />\r\n    <choose>\r\n      <when condition=\"@(!new int[] {1, 2}.Contains(context.Variables.GetValueOrDefault&lt;JObject&gt;(&quot;requestBody&quot;)[&quot;topic&quot;].Value&lt;int&gt;()))\">\r\n        <return-response>\r\n          <set-status code=\"400\" reason=\"Invalid topic value\" />\r\n          <set-body>\r\n                        @{\r\n                            return new JObject\r\n                            {\r\n                                [\"error\"] = \"Invalid topic value. The topic value must be in the valid topics array.\"\r\n                            }.ToString();\r\n                        }\r\n                    </set-body>\r\n        </return-response>\r\n      </when>\r\n    </choose>\r\n  </inbound>\r\n  <!-- Control if and how the requests are forwarded to services  -->\r\n  <backend>\r\n    <base />\r\n  </backend>\r\n  <!-- Customize the responses -->\r\n  <outbound>\r\n    <base />\r\n  </outbound>\r\n  <!-- Handle exceptions and customize error responses  -->\r\n  <on-error>\r\n    <base />\r\n  </on-error>\r\n</policies>",
                "format": "xml"
